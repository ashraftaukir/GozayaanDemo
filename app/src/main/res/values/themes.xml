<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GozayaanDemo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CategoryTextView" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/popular_text_color</item> <!-- Button text color -->
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:drawablePadding">@dimen/_5sdp</item> <!-- Padding between icon and text -->
        <item name="android:gravity">center</item> <!-- Center icon and text -->
        <item name="android:paddingTop">16dp</item> <!-- Top padding -->
        <item name="android:paddingBottom">@dimen/_6sdp</item> <!-- Bottom padding -->
        <item name="android:fontFamily">@font/gilroy_medium</item>

    </style>


</resources>